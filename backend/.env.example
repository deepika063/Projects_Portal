# Backend environment example
# Copy this file to `.env` and fill real values (DO NOT commit your real .env)

# MongoDB connection (local or hosted)
MONGODB_URI=mongodb://localhost:27017/projects-portal

# JWT secret used to sign tokens
JWT_SECRET=replace_this_with_a_strong_secret

# Server port
PORT=5000

# Base URL used by frontend to access API
BASE_URL=http://localhost:5000

# Notes:
# - Keep the real `.env` out of the repository.
# - Restart the backend after changing .env values.
